<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:id="@+id/userWant"
        android:textSize="25sp"
        android:textColor="@color/singapics_red"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="#f5f5f5">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/likeImageView2"
            android:src="@drawable/like_outline"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 likes"
            android:id="@+id/likeNumber2"
            android:textColor="#666"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/likeImageView2"
            android:layout_toEndOf="@+id/likeImageView2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholderName"
            android:id="@+id/postedBy2"
            android:textColor="#666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>