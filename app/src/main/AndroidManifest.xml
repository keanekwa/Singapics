<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.singapics" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SingapicsApplication"
        android:allowBackup="true"
        android:icon="@drawable/singapicsicon"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".LoginActivity">
        </activity>
        <activity
            android:name=".SignUpActivity">
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/appName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostNewActivity"
            android:label="@string/title_activity_post_new"
            android:parentActivityName="com.example.user.singapics.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.user.singapics.MainActivity" />
        </activity>
    </application>

</manifest>
