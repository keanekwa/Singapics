<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.singapics" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SingapicsApplication"
        android:allowBackup="true"
        android:icon="@drawable/singapicsicon"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/nothing">
        </activity>
        <activity
            android:name=".LoginActivity">
        </activity>
        <activity
            android:name=".SignUpActivity">
        </activity>
        <activity
            android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostNewActivity"
            android:label="@string/title_activity_post_new" >
        </activity>
    </application>

</manifest>
